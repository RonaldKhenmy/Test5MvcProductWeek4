@model MvcProduct.UserInterface.Models.Fishs

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Fishs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fish" class="control-label"></label>
                <input asp-for="Fish" class="form-control" />
                <span asp-validation-for="Fish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaughtDate" class="control-label"></label>
                <input asp-for="CaughtDate" class="form-control" />
                <span asp-validation-for="CaughtDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WaterType" class="form-label"></label>
                <select asp-for="WaterType" class="form-select" asp-items="Html.GetEnumSelectList<FishBody>()">
                    <option selected>Open this select menu</option>
                </select>
        
                <span asp-validation-for="WaterType" class="text-danger"></span>
            </div>
            <div class="form-group"> 
                <label asp-for="Age" class="form-label">Age</label>
                <input asp-for="Age" class="form-range" type="range" min="0" max="100" id="ageRange"/>
                <output asp-for="ageRange" id="valueRange" aria-hidden="true"></output>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div> 
            <script>
                const rangeInput = document.getElementById("ageRange");
                const rangeOutput = document.getElementById("valueRange"); 
                //Sets initial value
                rangeOutput.textContent = rangeInput.value; 

                rangeInput.addEventListener('input', function() 
                {
                    rangeOutput.textContent = this.value;
                });
            </script>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div> 
            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("~/UserInterface/Views/Shared/_ValidationScriptsPartial.cshtml");
    }
}
